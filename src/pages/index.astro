---
import Layout from '../layouts/Layout.astro';
import Contributor from '../components/links/contributor.astro'
import Github from '../components/links/github.astro';
import Link from '../components/links/link.astro';
---

<Layout>
  <div slot="header" class="header">
    <h1 class="brandname">tgirl.cloud</h1>
    <p class="branddesc">
      tgirlcloud is a collection of tools for nix configuration and development.
    </p>
  </div>

  <h3>
    resources:
  </h3>
  <ul>
    <li><Github id="tgirlcloud"/></li>
    <li><Link text="Uptime monitoring" ref="https://status.tgirl.cloud/status/infra" /></li>
  </ul>

  <h3>
    services:
  </h3>
  <ul>
    <li><Link text="PDS" ref="https://pds.tgirl.cloud" /></li>
    <li><Link text="Piper" ref="https://piper.kittysay.xyz" /></li>
  </ul>

  <h3>
    projects:
  </h3>
  <ul>
    <li><Github id="tgirlcloud/easy-hosts" /></li>
    <li><Github id="tgirlcloud/lix-diff" /></li>
    <li><Github id="tgirlcloud/pkgs" /></li>
    <li><Github id="tgirlcloud/locker" /></li>
    <li><Github id="tgirlcloud/nix-templates" /></li>
    <li><Github id="tgirlcloud/gift-wrap" /></li>
  </ul>
</Layout>
